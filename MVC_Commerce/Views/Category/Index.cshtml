@model IEnumerable<Category>

@{
    ViewData["Title"] = "List of Categories";
}

<div class="row">
    <div class="col-8 offset-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model=>model.CategoryName)</th>
                    <th>@Html.DisplayNameFor(model=>model.CategoryDescription)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(a=>item.CategoryName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(a=>item.CategoryDescription)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i> Edit</a> |
                            <a class="btn btn-outline-info"><i class="bi bi-eye"></i> Details</a> |
                            <a class="btn btn-danger"><i class="bi bi-trash"></i> Delete</a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div style="position:fixed; right:25px;bottom:75px;">

<a asp-controller="Category" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"> Add</i></a>
</div>