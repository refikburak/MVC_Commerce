@model Category
@{
    ViewData["Title"] = "Edit Category";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1 class="text-center">Update Category</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group pt-3">
                        <label asp-for="CategoryName" class="control-label"></label>
                        <input asp-for="CategoryName" class="form-control" />
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>
                    <div class="form-group pt-3">
                        <label asp-for="CategoryDescription" class="control-label"></label>
                        <input asp-for="CategoryDescription" class="form-control" />
                        <span asp-validation-for="CategoryDescription" class="text-danger"></span>
                    </div>
                    <div class="form-group pt-3">
                        <input type="submit" value="Update" class="btn btn-outline-success float-end" />
                        <a class="btn btn-outline-info" asp-action="Index">Display All</a>
                    </div>
                </form>
            </div>
        </div>

    </div>


</div>