@model IEnumerable<User>

@{
    ViewData["Title"] = "List of Users";
}

<div class="row">
    <div class="col-8 offset-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model=>model.UserName)</th>
                    <th>@Html.DisplayNameFor(model=>model.UserSurname)</th>
                    <th>@Html.DisplayNameFor(model=>model.UserEmail)</th>
                    <th>@Html.DisplayNameFor(model=>model.UserPhoneNumber)</th>
                    <th>@Html.DisplayNameFor(model=>model.UserBalance)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(a=>item.UserName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(a=>item.UserSurname)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(a=>item.UserEmail)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(a=>item.UserPhoneNumber)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(a=>item.UserBalance) ₺
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Edit</a> |
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i> Details</a> |
                            <a class="btn btn-danger"asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i> Delete</a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div style="position:fixed; right:25px;bottom:75px;">

    <a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"> Add</i></a>
</div>