@model Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="row">

    <div class=" col-md-8 offset-2">
        <div class="product-card">
            <div class="badge">Hot</div>
            <div class="product-tumb">
                <img src="@Model.ProductImageURL" width="100%" height="100%" alt="">
            </div>
            <div class="product-details">
                <span class="product-catagory"><a asp-controller="Category" asp-action="Details" asp-route-id="@Model.CategoryId"> @Model.Category.CategoryName </a></span>
                <h4><a>@Model.ProductBrand @Model.ProductName</a></h4>
                <p>@Model.ProductDescription</p>
                <div class="product-bottom-details">
                    <div class="product-price">@Model.ProductPrice ₺</div>
                    <div class="product-links">
                        <a ><i class="fa fa-heart"></i></a>
                        <a ><i class="fa fa-shopping-cart"></i></a>
                        <a asp-action="Details" asp-route-id="@Model.Id"><i class="bi bi-eye-fill"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>